@model MvcNews.Models.NewsItem

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>NewsItem</h4>
<hr />
<div class="row">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
